<div align="center" >
  <h3>Send A message to Us</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal', :style=>'width:15%' } do |f| %>
    <p><%= f.input :name, :required => true%></p>
    <p><%= f.input :email, :required => true %></p>
    <p><%= f.input :message, :as => :text, :required => true %></p>

    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>